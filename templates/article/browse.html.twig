{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

<div class="row">
        <div class="col-8">
            <h2>Vos articles</h2>
        </div>
        <div class="col-4 text-end">
            <a href="{{ path('article_add') }} " class="btn btn-success">Ajouter</a>
        </div>
    </div>
    <hr class="divider">

    <div class="row">
        {% for article in articles %}
         <div class="col-4 mb-3">
            <div class="card">
                <img src="{{ article.image }}" class="card-img-top" alt="..." height="256px">
                <div class="card-body">
                  <h5 class="card-title">{{ article.title }}</h5>
                  <p class="card-text">{{ article.content|summary }}</p>
                  <a href="#" class="btn btn-primary">Modifier</a>
                </div>
              </div>
         </div>   
    
    {% endfor %}

    

    </div>






{% endblock %}