{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

<div class="row">
        <div class="col-8">
            <h2>Vos articles</h2>
        </div>
        <div class="col-4 text-end">
            <a href="{{ path('article_add') }} " class="btn btn-success">Ajouter</a>
        </div>
    </div>
    <hr class="divider">

    <div class="row">
        {% for article in articles %}
         <div class="col-4 mb-3">
            <div class="card">
{#                <img src="{{ article.image }}" class="card-img-top" height="256px"> #}

                {{ include("base_parts/images.html.twig", { src: article.image }) }}
                <div class="card-body">
                  <h5 class="card-title">{{ article.title }} {{ "new"|badge("bg-danger") }} </h5>

                  <p class="card-text">{{ article.content|summary('50') }}</p>
                  <a href="{{path("article_edit", { id : article.id }) }}" class="btn btn-primary">Modifier</a>
                  <a href="{{ path("article_delete", { id : article.id } ) }}" class="btn btn-danger">Supprimer</a>
                </div>
              </div>
         </div>   
    
    {% endfor %}

    

    </div>






{% endblock %}